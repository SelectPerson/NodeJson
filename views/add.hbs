<h1>Add New Course</h1>


<form action="/add" method="post">
    <div class="input-field">
        <input id="title" type="text" class="validate" name="title" required>
        <label for="title">Course name</label>
         <span class="helper-text" data-error="Add a name" data-success="Right"></span>
    </div>
    <div class="input-field">
        <input id="price" type="number" class="validate" name="price" required>
        <label for="price">Price</label>
         <span class="helper-text" data-error="Add a price" data-success="Right"></span>
    </div>
    <div class="input-field">
        <input id="img" type="text" class="validate" name="img" required>
        <label for="img">URL Image</label>
        <span class="helper-text" data-error="Add an img" data-success="Right"></span>
    </div>

    <button class="btn btn-primary">Add Course</button>

</form>